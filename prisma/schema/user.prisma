model User {
  id String @id @unique @default(cuid())

  email    String @unique
  username String
  password String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  role    ROLE
  student Student?
  teacher Teacher?
  admin   Admin?

  @@map("users")
}

enum ROLE {
  student
  teacher
  admin
}
